<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VallejosDayana_Examen2.Page1"
             Title="Page1">
    <StackLayout Padding="20">
        <Label x:Name="initialsLabel" Text="S. C." FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="nameEntry" Placeholder="Nombre" />
        <Entry x:Name="phoneEntry" Placeholder="Número de Teléfono" Keyboard="Telephone" />
        <Button Text="Realizar Recarga" Clicked="OnRecargaClicked" />
        <Label x:Name="lastRecargaLabel" Text="{Binding LastRecarga}" HorizontalOptions="Center" />
    </StackLayout>
    
</ContentPage>